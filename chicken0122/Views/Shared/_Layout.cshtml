<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
        <script src="~/Scripts/modernizr-2.8.3.js"></script>*@
    <link href="~/Content/CSS/forIndex.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
          crossorigin="anonymous" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
          integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
          integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn"
          crossorigin="anonymous" />

</head>
<body>
    <!-- navbar -->
    <nav class="navbar navbar-expand-md navbar-light bg-light">
        <div class="container-fluid d-flex align-items-center">
            <a class="navbar-brand" href="#"><img src="~/Content/Images/logo.png" alt=""  /> 露過人間</a>

            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent"
                    aria-controls="navbar"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon">123456</span>
            </button>

            <div class="collapse navbar-collapse" id="navbar">
                <ul class="navbar-nav mb-lg-0 d-flex align-items-center">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="Index"> 主頁</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">營地搜尋(無用)</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="Login">會員登入</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">關於我們(無用)</a>
                    </li>                    
                    <li class="nav-item">
                        @Html.ActionLink("全部會員資料", "List", "Home" )
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("註冊", "Register", "Home")
                    </li>
                    <li class="nav-item ml-4">
                        @Html.ActionLink("登入", "Login", "Home")
                    </li>
                    <li class="nav-item ml-4">
                        @Html.ActionLink("登出", "Logout", "Home")
                    </li>
                    <li class="nav-item ml-4">
                        @Html.ActionLink("個人資料", "personalProfile", "Home")
                    </li>
                    <li class="nav-item ml-4">
                        @Html.ActionLink("群組-verdor", "forGroup3", "Home")
                    </li>
                    <li class="nav-item ml-4">
                        @Html.ActionLink("群組-Customer", "forGroup2", "Home")
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
            <button class="btn dropdown-menu btn-info" data-toggle="dropdown">
                @*<img src="/images/bell-ring.png" alt="" height="30px" />*@
            </button>

            <button class="btn btn-info" data-bs-toggle="modal" data-bs-target="#logInModal">
                @*<img src="/images/user.png" alt="" height="30px" />*@
            </button>
        </div>
    </nav>
    <!--  -->
    @RenderBody()
    <div class="container body-content">

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>